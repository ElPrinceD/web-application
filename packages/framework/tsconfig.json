{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": false,
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": [
      "@types",
      "../../node_modules/@types"
    ],
    "noImplicitAny": false,
    "skipDefaultLibCheck": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "../../node_modules/@types/minimatch"
  ]
}
